<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <log4net>
    <!-- Console Appender -->
    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
      </layout>
    </appender>

    <!-- File Appender -->
    <appender name="FileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="C:\PPGSage50Plugin\Logs\PPGSage50Plugin.log" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="5" />
      <maximumFileSize value="10MB" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
      </layout>
    </appender>

    <!-- Error File Appender -->
    <appender name="ErrorFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="C:\PPGSage50Plugin\Logs\PPGSage50Plugin_Errors.log" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="5" />
      <maximumFileSize value="10MB" />
      <staticLogFileName value="true" />
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="ERROR" />
        <levelMax value="FATAL" />
      </filter>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger - %message%newline%exception" />
      </layout>
    </appender>

    <!-- API Calls Appender -->
    <appender name="ApiCallsAppender" type="log4net.Appender.RollingFileAppender">
      <file value="C:\PPGSage50Plugin\Logs\PPGSage50Plugin_API.log" />
      <appendToFile value="true" />
      <rollingStyle value="Date" />
      <datePattern value="yyyyMMdd" />
      <staticLogFileName value="false" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
      </layout>
    </appender>

    <!-- Synchronization Appender -->
    <appender name="SyncAppender" type="log4net.Appender.RollingFileAppender">
      <file value="C:\PPGSage50Plugin\Logs\PPGSage50Plugin_Sync.log" />
      <appendToFile value="true" />
      <rollingStyle value="Date" />
      <datePattern value="yyyyMMdd" />
      <staticLogFileName value="false" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
      </layout>
    </appender>

    <!-- Root Logger -->
    <root>
      <level value="INFO" />
      <appender-ref ref="ConsoleAppender" />
      <appender-ref ref="FileAppender" />
      <appender-ref ref="ErrorFileAppender" />
    </root>

    <!-- Logger spécifique pour les appels API -->
    <logger name="PPGSage50Plugin.Services.AuthenticationService" additivity="false">
      <level value="INFO" />
      <appender-ref ref="ApiCallsAppender" />
    </logger>

    <logger name="PPGSage50Plugin.Services.CustomerApiService" additivity="false">
      <level value="INFO" />
      <appender-ref ref="ApiCallsAppender" />
    </logger>

    <logger name="PPGSage50Plugin.Services.ProductApiService" additivity="false">
      <level value="INFO" />
      <appender-ref ref="ApiCallsAppender" />
    </logger>

    <logger name="PPGSage50Plugin.Services.OrderApiService" additivity="false">
      <level value="INFO" />
      <appender-ref ref="ApiCallsAppender" />
    </logger>

    <logger name="PPGSage50Plugin.Services.InvoiceApiService" additivity="false">
      <level value="INFO" />
      <appender-ref ref="ApiCallsAppender" />
    </logger>

    <logger name="PPGSage50Plugin.Services.DeliveryApiService" additivity="false">
      <level value="INFO" />
      <appender-ref ref="ApiCallsAppender" />
    </logger>

    <logger name="PPGSage50Plugin.Services.QuotationApiService" additivity="false">
      <level value="INFO" />
      <appender-ref ref="ApiCallsAppender" />
    </logger>

    <logger name="PPGSage50Plugin.Services.BackOrderApiService" additivity="false">
      <level value="INFO" />
      <appender-ref ref="ApiCallsAppender" />
    </logger>

    <logger name="PPGSage50Plugin.Services.PricingApiService" additivity="false">
      <level value="INFO" />
      <appender-ref ref="ApiCallsAppender" />
    </logger>

    <!-- Logger spécifique pour la synchronisation -->
    <logger name="PPGSage50Plugin.Services.SynchronizationService" additivity="false">
      <level value="INFO" />
      <appender-ref ref="SyncAppender" />
    </logger>

    <!-- Logger pour le plugin principal -->
    <logger name="PPGSage50Plugin.PPGSage50Plugin" additivity="false">
      <level value="INFO" />
      <appender-ref ref="FileAppender" />
      <appender-ref ref="ErrorFileAppender" />
    </logger>

    <!-- Logger pour les interfaces utilisateur -->
    <logger name="PPGSage50Plugin.UI" additivity="false">
      <level value="INFO" />
      <appender-ref ref="FileAppender" />
    </logger>
  </log4net>
</configuration>
